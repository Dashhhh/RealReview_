<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reviewAllRootLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#b1dddddd"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <ImageView
                android:id="@+id/reviewAllUserImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="9dp"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/reviewAllUserId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:text="123"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="primary"
                        app:bootstrapText="{fa-users} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />

                    <TextView
                        android:id="@+id/reviewAllUserFollower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0" />


                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="primary"
                        app:bootstrapText="{fa-commenting} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />


                    <TextView
                        android:id="@+id/reviewAllReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"

                        />

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="primary"
                        app:bootstrapText="{fa-camera-retro} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />


                    <TextView
                        android:id="@+id/reviewAllImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"


                        />

                    <com.beardedhen.androidbootstrap.BootstrapBadge
                        android:id="@+id/reviewAllCertify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:bootstrapSize="xs" />

                    <com.beardedhen.androidbootstrap.BootstrapBadge
                        android:id="@+id/reviewAllLocality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapSize="xs" />


                </LinearLayout>


            </LinearLayout>


            <!--<TextView-->
            <!--android:id="@+id/reviewAllRegdate"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_margin="3dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="end"-->
            <!--android:text="123123123123123123"-->
            <!--android:textSize="10sp" />-->


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/reviewAllRating_inflate"
                    style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.1" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/reviewAllModify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/reviewAllDelete"
                    android:layout_alignBottom="@+id/reviewAllDelete"
                    android:layout_toStartOf="@+id/reviewAllDelete"
                    app:bootstrapBrand="success"
                    app:bootstrapSize="sm"
                    app:bootstrapText="{fa-wrench}\n재작성"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="true" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/reviewAllDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    app:bootstrapBrand="danger"
                    app:bootstrapSize="sm"
                    app:bootstrapText="{fa-trash-o}\n삭제"
                    app:buttonMode="regular"
                    app:roundedCorners="true"
                    app:showOutline="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/reviewAllText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:minLines="3"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:paddingTop="10dp"
                android:text="foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar
                foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar "
                android:textColor="#000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="7dp"
                android:background="#aaaaaa" />

            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/reviewAllRegdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="10dp"
                android:textSize="11sp"
                app:bootstrapBrand="info"
                app:bootstrapText="{fa-clock-o} 123123"
                app:fontAwesomeIcon="fa_android"
                app:typicon="ty_anchor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/reviewAllUsefulBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:bootstrapBrand="warning"
                app:bootstrapSize="sm"
                app:bootstrapText="{ty_lightbulb} 유용해요"
                app:buttonMode="checkbox"
                app:roundedCorners="true"
                app:showOutline="true"
                app:typicon="ty_lightbulb" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/reviewAllGoodBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:bootstrapBrand="success"
                app:bootstrapSize="sm"
                app:bootstrapText="{md_thumb_up} 멋있어요"
                app:buttonMode="checkbox"
                app:roundedCorners="true"
                app:showOutline="true" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/reviewAllCoolBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:bootstrapBrand="primary"
                app:bootstrapSize="sm"
                app:bootstrapText="{fa_meh_o} 냉정해요"
                app:buttonMode="checkbox"
                app:roundedCorners="true"
                app:showOutline="true" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>