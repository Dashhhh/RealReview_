<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainMeQuestionRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#b1dddddd" />

    <LinearLayout
        android:id="@+id/mainMeQuestionContentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainMeQuestionProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:padding="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <ImageView
                android:id="@+id/mainMeQuestionProfileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="9dp"
                android:scaleType="fitXY" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mainMeQuestionUserNick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:text="123"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="primary"
                        app:bootstrapText="{fa-users} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />

                    <TextView
                        android:id="@+id/mainMeQuestionFollowerCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0" />


                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="primary"
                        app:bootstrapText="{fa-commenting} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />


                    <TextView
                        android:id="@+id/mainMeQuestionReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"

                        />

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="primary"
                        app:bootstrapText="{fa-camera-retro} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />


                    <TextView
                        android:id="@+id/mainMeQuestionImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:text="0"


                        />

                    <com.beardedhen.androidbootstrap.BootstrapBadge
                        android:id="@+id/mainMeQuestionCertify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:bootstrapSize="xs" />

                    <com.beardedhen.androidbootstrap.BootstrapBadge
                        android:id="@+id/mainMeLocality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapSize="xs" />


                </LinearLayout>


            </LinearLayout>


            <!--<TextView-->
            <!--android:id="@+id/reviewRegdate"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_vertical"-->
            <!--android:layout_margin="3dp"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="end"-->
            <!--android:text="123123123123123123"-->
            <!--android:textSize="10sp" />-->


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="#dddddd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">


            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/mainMeQuestionMyRating"
                style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:rating="0"
                android:stepSize="0.1"
                app:layout_constraintBottom_toBottomOf="@+id/mainMeQuestionShopThumbnail"
                tools:layout_editor_absoluteX="59dp" />

            <TextView
                android:id="@+id/mainMeQuestionWroteType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:paddingRight="3dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Wrote Type"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="7dp"
                android:background="#aaaaaa" />


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/mainMeQuestionShopThumbnail"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="0dp" />


                <TextView
                    android:id="@+id/mainMeQuestionShopName"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginTop="8dp"
                    android:text="SHOP NAME"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="85dp" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/mainMeQuestionShopRating"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginBottom="8dp"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.1"
                    app:layout_constraintBottom_toBottomOf="@+id/mainMeQuestionShopThumbnail"
                    tools:layout_editor_absoluteX="85dp" />

                <TextView
                    android:id="@+id/mainMeQuestionShopReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="SHOP TOTAL REVIEW"
                    tools:layout_editor_absoluteX="172dp"
                    tools:layout_editor_absoluteY="26dp" />

                <com.beardedhen.androidbootstrap.AwesomeTextView
                    android:id="@+id/mainMeQuestionCheckinCount"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="8dp"
                    app:bootstrapText="{fa-certificate}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="7dp"
                android:background="#aaaaaa" />


            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/mainMeQuestionRegdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="10dp"
                app:bootstrapBrand="info"
                app:bootstrapText="{fa-clock-o} 123123"
                app:fontAwesomeIcon="fa_android"
                app:typicon="ty_anchor" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


        </LinearLayout>
    </LinearLayout>
</LinearLayout>