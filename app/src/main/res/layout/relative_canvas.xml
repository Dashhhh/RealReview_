<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/questionAllNoQuestionRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical">

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:textSize="100sp"
            android:textAlignment="center"
            app:bootstrapBrand="warning"
            app:bootstrapText="{fa-exclamation-triangle}"
            app:typicon="ty_anchor"
            />

        <com.beardedhen.androidbootstrap.AwesomeTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="bottom"
            android:textSize="20sp"
            android:textAlignment="center"
            app:bootstrapBrand="warning"
            app:bootstrapText="첫 번째 TIP을 남겨 보세요!"
            app:fontAwesomeIcon="fa_exclamation_circle"
            app:typicon="ty_anchor"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/questionAllNoQuestionButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:bootstrapBrand="primary"
            app:bootstrapSize="lg"
            app:bootstrapText="{fa-sign-out}    TIP 쓰러 가기"
            app:buttonMode="regular"
            app:roundedCorners="true"
            app:showOutline="false" />
    </LinearLayout>



</LinearLayout>