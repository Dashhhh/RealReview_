<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tipRootLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#eeeeee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/tipProfileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingLeft="16dp"
            android:paddingRight="14dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/tipUserImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginEnd="9dp"
                android:scaleType="centerInside" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    >

                    <TextView
                        android:id="@+id/tipUserNick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="center_vertical"
                        android:text="123"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapBrand="success"
                        app:bootstrapText="{fa-users} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />

                    <TextView
                        android:id="@+id/tipUserFollower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0" />


                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        app:bootstrapBrand="success"
                        app:bootstrapText="{fa-commenting} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />


                    <TextView
                        android:id="@+id/tipReviewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"

                        />

                    <com.beardedhen.androidbootstrap.AwesomeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        app:bootstrapBrand="success"
                        app:bootstrapText="{fa-camera-retro} "
                        app:fontAwesomeIcon="fa_android"
                        app:typicon="ty_anchor" />


                    <TextView
                        android:id="@+id/tipImageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"

                        />

                    <com.beardedhen.androidbootstrap.BootstrapBadge
                        android:id="@+id/tipCertify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        app:bootstrapSize="xs"
                        />
                    <com.beardedhen.androidbootstrap.BootstrapBadge
                        android:id="@+id/tipLocality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:bootstrapSize="xs"
                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#cccccc" />

        <LinearLayout
            android:id="@+id/tipTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tipText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:padding="10dp"
                android:text="foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar foo bar "
                android:textColor="#000000" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:background="#cccccc" />


            <com.beardedhen.androidbootstrap.AwesomeTextView
                android:id="@+id/tipRegdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="10dp"
                android:textSize="11sp"
                app:bootstrapBrand="info"
                app:bootstrapText="{fa-clock-o} 123123"
                app:fontAwesomeIcon="fa_android"
                app:typicon="ty_anchor" />




        </LinearLayout>



    </LinearLayout>

</LinearLayout>