<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.teamnova.ej.realreview.activity.Main">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/nearbyLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/map_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="> 내 주변 추천 장소는?"
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <!--<fragment xmlns:android="http://schemas.android.com/apk/res/android"-->
                        <!--android:name="com.google.android.gms.maps.MapFragment"-->
                        <!--android:id="@+id/mapView"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="200dp"/>-->


                        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/mapView"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            tools:context=".activity.Main" />

                        <!--<com.google.android.gms.maps.MapView-->
                        <!--android:id="@+id/mapView"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="230dp" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:orientation="horizontal"
                            android:src="@drawable/border_alpha">

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bottom_restaurants"
                                android:scaleType="centerCrop"
                                android:src="@drawable/border_alpha_max" />

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bottom_coffee"
                                android:src="@drawable/border_alpha_max"

                                />

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bottom_hairs"
                                android:src="@drawable/border_alpha_max"

                                />

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bottom_bars"
                                android:src="@drawable/border_alpha_max"

                                />

                        </LinearLayout>

                        <Button
                            android:id="@+id/nearbyShopAdd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border_alpha"
                            android:text="가게 등록 신청하기" />


                    </LinearLayout>


                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/searchLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/searchMap"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".activity.Main" />

            <!--android:name="com.google.android.gms.maps.MapFragment"-->

            <com.arlib.floatingsearchview.FloatingSearchView
                android:id="@+id/floating_search_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/floating_search_view2"
                app:floatingSearch_close_search_on_keyboard_dismiss="true"
                app:floatingSearch_leftActionMode="showSearch"
                app:floatingSearch_menu="@menu/main_search"
                app:floatingSearch_searchHint="Search Shop Type"
                app:floatingSearch_showMenuAction="true"
                app:floatingSearch_showSearchKey="false"
                app:floatingSearch_suggestionsListAnimDuration="200" />


            <com.arlib.floatingsearchview.FloatingSearchView
                android:id="@+id/floating_search_view2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:floatingSearch_close_search_on_keyboard_dismiss="true"
                app:floatingSearch_leftActionMode="showSearch"
                app:floatingSearch_menu="@menu/main_search"
                app:floatingSearch_searchHint="Search Shop Type"
                app:floatingSearch_showMenuAction="true"
                app:floatingSearch_showSearchKey="false"
                app:floatingSearch_suggestionsListAnimDuration="200" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/meLinear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/meScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/meLinearSecond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/meProfileImage"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="30dp" />

                    <TextView
                        android:id="@+id/meProfileId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="test"
                        android:textAlignment="center"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/meProfileNick"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="test"
                        android:textAlignment="center"
                        android:textSize="17dp" />

                    <LinearLayout
                        android:id="@+id/meProfileStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/followerCntImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/default_follower" />

                        <TextView
                            android:id="@+id/meFollowerText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="12"
                            android:textAlignment="center" />

                        <ImageView
                            android:id="@+id/reviewCntImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/default_review" />

                        <TextView
                            android:id="@+id/meReviewText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="12"
                            android:textAlignment="center" />

                        <ImageView
                            android:id="@+id/imageUploadCnt"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/default_imageupload" />

                        <TextView
                            android:id="@+id/imageUploadText"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            android:text="12"
                            android:textAlignment="center" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/meMLinearMyFeed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="#62aaaaaa"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="17dp"
                            android:layout_marginTop="20dp"
                            android:text="My Feed"
                            android:textColor="#000000"
                            android:textSize="17dp"
                            android:textStyle="bold" />

                        <ListView
                            android:id="@+id/meMyFeedListView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp" />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
